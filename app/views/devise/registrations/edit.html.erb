
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card rounded-0">
            <div class="card-header bg-success">
              <h3 class="mb-0 text-white">Editar perfil</h3>
            </div>
            <div class="card-body">
              <form class="form" role="form" novalidate="" method="POST">
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Esperando confirmación de: <%= resource.unconfirmed_email %></div>
                <% end %>
                <div class="form-group">
                  <%= f.label :password %> <i>(Déjalo en blanco si no quieres cambiarla)</i><br />
                  <%= f.password_field :password, autocomplete: "new-password" %>
                  <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
                </div>
                <div class="form-check">
                  <%= f.label :current_password %> <i>(Necesitamos tu contraseña para confirmar los cambios)</i><br />
                  <%= f.password_field :current_password, autocomplete: "current-password" %>
                </div>
                <br>
                <div class="actions">
                  <%= f.submit 'Actualizar' ,:class => 'btn btn-success'%>
                </div>
                <br>
                <h3>Cancelar mi cuenta</h3>

                <p><strong>¿No está contento? </strong><%= button_to "Cancelar", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete , :class => 'btn btn-success'%></p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>