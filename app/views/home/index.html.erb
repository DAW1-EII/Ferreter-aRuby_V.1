

  <!-- Contenedor del carousel -->
  <div class="container ">
    <div id="indicador" class="carousel slide carousel-fade d-none d-sm-block " data-ride="carousel">
      <ol class=" carousel-indicators">
        <li data-target="#indicador" data-slide-to="0" class="active"></li>
        <li data-target="#indicador" data-slide-to="1"></li>
        <li data-target="#indicador" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag image_path("elcrucecasa.png"), style: 'height: 400px; width: 1500px;'%>
        </div>
        <div class="carousel-item">
          <%= image_tag image_path("cinturon.jpg"), style: 'height: 400px; width: 1500px;'%>
          <div class="carousel-caption d-none d-md-block p-3 mb-2 bg-danger text-white rounded">
            <h5>Bienvenido a nuestra web</h5>
            <p>Usted piensa y nosotros le ayudamos</p>
          </div>
        </div>
        <div class="carousel-item ">
          <%= image_tag image_path("carrito.jpg"), style: 'height: 400px; width: 1500px;'%>
        </div>
      </div>
      <a class="carousel-control-prev" href="#indicador" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#indicador" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

