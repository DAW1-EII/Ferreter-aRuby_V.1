




<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card rounded-0">
            <div class="card-header bg-success">
              <h3 class="mb-0 text-white">Informaci√≥n</h3>
            </div>
            <div class="card-body">
              <form class="form" role="form" novalidate="" method="POST">
                <div class="form-group">
                  <strong>Name:</strong>
                  <%= @currentuser.name %>
                </div>
                <div class="form-group">
                  <strong>Email:</strong>
                  <%= @currentuser.email %>
                </div>
                <div class="form-group">
                  <strong>Password:</strong>
                  <%= @currentuser.password %>
                </div>
                <div class="form-group">
                  <strong>Dni:</strong>
                  <%= @currentuser.dni %>
                </div>
                <div class="form-group">
                  <strong>Telephone:</strong>
                  <%= @currentuser.telephone %>
                </div>
                <div class="form-group">
                  <strong>Dir:</strong>
                  <%= @currentuser.dir %>
                </div>

                <div class="form-group">
                  <strong>Number:</strong>
                  <%= @currentuser.number %>
                </div>

                <div class="form-group">
                <strong>Cp:</strong>
                <%= @currentuser.cp %>
                </div>

                <%= button_to 'Editar', edit_currentuser_path(@currentuser), method: 'get',:class => 'btn btn-warning' %> <br>

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



