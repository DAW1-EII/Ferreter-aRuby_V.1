<p id="notice"><%= notice %></p>



<div class="container ">
  <% if user_signed_in? %>

  <div class="row">

    <br>

        <div class="col-xs-6 col-md-6">
          <h2 class="text-success">Lista de Usuarios</h2>

          <table class="table table-sm">
            <thead>
            <tr>
              <th scope="col">Nombre</th>
              <th scope="col">Email</th>
              <th scope="col">Password</th>
              <th scope="col">Dni</th>
              <th scope="col">Telefono</th>
              <th scope="col">Dirección</th>
              <th scope="col">Número</th>
              <th scope="col">Cod Postal</th>
              <th colspan="3"></th>

            </tr>
            </thead>

            <tbody>
            <% @currentusers.each do |currentuser| %>
              <tr>
                <td><%= currentuser.name %></td>
                <td><%= currentuser.email %></td>
                <td><%= currentuser.password %></td>
                <td><%= currentuser.dni %></td>
                <td><%= currentuser.telephone %></td>
                <td><%= currentuser.dir %></td>
                <td><%= currentuser.number %></td>
                <td><%= currentuser.cp %></td>
                <div class="btn-group mr-4">
                  <td><%= button_to 'Mostrar', currentuser_path(currentuser), method: 'get' ,:class => 'btn btn-info'%></td>
                </div>

                <div class="btn-group mr-4">
                  <td><%= button_to 'Editar', edit_currentuser_path(currentuser), method: 'get' ,:class => 'btn btn-warning'%></td>
                </div>
                <div class="btn-group mr-4">
                  <td><%= button_to 'Eliminar', currentuser_path(currentuser), method: 'delete', data: { confirm: '¿Estás seguro?' } ,:class => 'btn btn-danger'%></td>
                </div>

              </tr>
            <% end %>
            </tbody>
          </table>

          <br>

          <%= button_to 'Nuevo Usuario', new_currentuser_path , method: 'get' ,:class => 'btn btn-success'%> <br>




    </div>



  </div>

  <% end %>

</div>



