
<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card rounded-0">
            <div class="card-header bg-success">
              <h3 class="mb-0 text-white">Información</h3>
            </div>
            <div class="card-body">
              <form class="form" role="form" novalidate="" method="POST">
                <div class="form-group">
                  <label>Name:</label>
                  <%= @product.name %>
                </div>
                <div class="form-group">
                  <label>Descripción:</label>
                  <%= @product.description %>
                </div>
                <div class="form-group">
                  <label>Cantidad:</label>
                  <%= @product.quantity %>
                </div>
                <div class="form-group">
                  <label>Precio:</label>
                  <%= @product.price %>
                </div>
                <div class="form-group">
                  <label>Disponible:</label>
                  <%= @product.available %>
                </div>
                <div class="form-group">
                  <label>Categoría:</label>
                  <%= @product.category_id%>
                </div>

                <div class="form-group">
                  <label>Imágen:</label>
                  <%= image_tag @product.picture.url, style: 'height:100px; width:100px;'%>
                </div>


                <% if user_signed_in? %>
                  <%= button_to 'Editar', edit_product_path(@product), method: 'get',:class => 'btn btn-warning' %> <br>
                <% end%>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



