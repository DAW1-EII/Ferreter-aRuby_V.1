<h1>Búsqueda avanzada</h1>

<%= form_for @search, html: {class: "pure-form"} do |s|%>

  <div class="field">
    <%= s.label :keywords %> <br />
    <%= s.text_field :keywords %>
  </div>

  <div class="field">
    <%= s.label :category %> <br />
    <%= s.select :category, options_for_select(@categories), :include_blank => true %>
  </div>

  <div class="field">
    <p><%= s.label :min_price, "Precio Mínimo" %> - <%= s.text_field :min_price, size: 10 %></p>
    <p><%= s.label :max_price, "Precio Máximo" %> - <%= s.text_field :max_price, size: 10 %></p>
  </div>

  <div class="field">
    <p><%= s.label :isbn, "Cantidad" %> - <%= s.text_field :isbn, size: 10 %></p>
  </div>

  <div class="field">
    <p><%= s.label :available, "Disponible" %> - <%= s.check_box :available%></p>
  </div>

  <div class="actions"><%= s.submit "Buscar", class: "btn btn-success" %></div>
  <br>
<%end %>

<%= button_to 'Inicio', products_path, method: 'get' ,:class => 'btn btn-primary'%>
